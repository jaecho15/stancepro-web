{
  "headers": [
    {
      "source": "/.well-known/apple-app-site-association",
      "headers": [{ "key": "Content-Type", "value": "application/json" }]
    }
  ],
  "redirects": [
    { "source": "/functions/v1/auth-callback/:splat*", "destination": "/auth-callback/:splat*", "permanent": false },
    { "source": "/auth-callback/", "destination": "/auth-callback", "permanent": false }
  ],
  "rewrites": [
    { "source": "/auth/v1/verify", "destination": "/auth-callback" },
    { "source": "/auth/v1/callback", "destination": "/auth-callback" },
    { "source": "/auth/v1/:splat*", "destination": "/auth-callback" }
  ]
}
